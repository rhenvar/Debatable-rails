<%= form_for [@user, @debate] do |f| %>
  <%= f.collection_select(:category_id, @categories, :id, :category_name) %>
  <%= f.collection_select(:debate_style_id, @debate_styles, :id, :debate_style) %>
  <%= f.text_field(:topic, :placeholder => 'Topic') %>
  <%= f.text_field(:name, :placeholder => 'Debate Name') %>
  <%= f.text_area(:description, :placeholder => 'Description') %>
  <%= f.label('Public') %>
  <%= f.check_box(:public) %>

  <%= Debater Invites %>
  <%= f.fields_for :debater_invites do |debater_invites_form| %>
  <%= debater_invites_form.text_field(:user_name, :placeholder => 'Debater name or e-mail') %>
  <% end %>

  <%= Moderator Invites %>
  <%= f.fields_for :moderator_invites do |moderator_invites_form| %>
  <%= moderator_invites_form.text_field(:user_name, :placeholder => 'Moderator name or e-mail') %>
  <%= f.submit %>
<% end %>
