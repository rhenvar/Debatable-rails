<%= form_for [@user, @debate] do |f| %>
  <%= f.collection_select(:category_id, @categories, :id, :category_name, :required => true) %>
  <%= f.collection_select(:debate_style_id, @debate_styles, :id, :debate_style, :required => true) %>
  <%= f.text_field(:topic, :placeholder => 'Topic', :required => true) %>
  <%= f.text_field(:name, :placeholder => 'Debate Name', :required => true) %>
  <%= f.text_area(:description, :placeholder => 'Description') %>
  <%= f.label('Public') %>
  <%= f.check_box(:public) %>
  <br />
  <br />

  <%= 'Debater Invites' %>
  <%= f.fields_for :debater_invites do |debater_invites_form| %>
  <%= render 'debater_invites_fields', f: debater_invites_form %>
  <% end %>
  <br />

  <%= 'Moderator Invites' %>
  <%= f.fields_for :moderator_invites do |moderator_invites_form| %>
  <fieldset>
  <%= moderator_invites_form.text_field(:user_name, :placeholder => 'Moderator name or e-mail') %>
  </fieldset>
  <% end %>
  <%= f.submit %>
<% end %>
