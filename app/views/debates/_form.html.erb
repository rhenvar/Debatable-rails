<div class="home-left"></div>



<div class="row">

      <h2 class="center-h">
      New Debate
    </h2>

    <div class="col-50 debate-form">
<%= form_for [@user, @debate] do |f| %>
<h4>
Debate Name
</h4>

    <%= f.text_field(:name, :placeholder => 'Debate Name', :required => true, :class => "forms") %>


<h4>
Description
</h4>

    <%= f.text_area(:description, :placeholder => 'Description', :class => "forms") %>


 <h4>
What style?
</h4>

    <%= f.collection_select(:debate_style_id, @debate_styles, :id, :debate_style, {:required => true}, {:class => "forms"}) %>

<h4>
What are you debating?
</h4>

    <%= f.collection_select(:category_id, @categories, :id, :category_name, {:required => true}, {:class => "forms"}) %>


<h4>
Topic
</h4>

    <%= f.text_field(:topic, :placeholder => 'Topic', :required => true, :class => "forms") %>

    <h4>
    <%= f.label('Public') %>
    
  <%= f.check_box(:public) %>
</h4>

    </div>
    
  <div class="col-50 debate-form">


  <%= f.hidden_field(:size, :value => 1, :class => 'debate_size_style') %>


    <h4>
    Invite Debaters:
  </h4>
 
  <%= f.fields_for :debater_invites do |debater_invite_form| %>
  <%= render 'debater_invite_fields', f: debater_invite_form %>
  <% end %>

    <h4>
    Invite Moderators:
  </h4>

  <%= f.fields_for :moderator_invites do |moderator_invite_form| %>
  <%= render 'moderator_invite_fields', f: moderator_invite_form %>
  
  <h4>
  <%= link_to_add_moderator_fields "Add Moderator", f, :moderator_invites %>
</h4>

    <h4>
    <%= f.submit %>
  </h4>
  
</div>

<% end %>
<% end %>

<div class="col-10"></div>

</div>


<div class="home-right"></div>
