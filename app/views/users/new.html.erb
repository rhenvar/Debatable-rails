	<label class="control-label col-sm-2">First Name</label>
	<div class="col-sm-5">
		<%= form_for(@user) do |f| %>
			<%= f.text_field(:firstname, {:placeholder => "First Name", :class => 'btn btn-default', :required => true}) %>
</div>

	<label class="control-label col-sm-2">Last Name</label>
	<div class="col-sm-5">
		<%= f.text_field(:lastname, {:placeholder => "Last Name", :class => 'btn btn-default', :required => true}) %>
</div>

<div class="form-group">
	<label class="control-label col-sm-2">E-mail</label>
	<div class="col-sm-5">
		<%= f.text_field(:email, {:placeholder => "E-mail", :class => 'btn btn-default', :required => true}) %>
	</div>
</div>

<div class="form-group">
	<label class="control-label col-sm-2">Create Password</label>
	<div class="col-sm-5">
		<%= f.password_field(:password, {:placeholder => "Password", :class => 'btn btn-default', :required => true}) %>
	</div>
</div>

<div class="form-group">
	<label class="control-label col-sm-2">Confirm Password</label>
	<div class="col-sm-5">
		<%= f.password_field(:password_confirmation, {:placeholder => "Confirm Password", :class => 'btn btn-default', :required => true}) %>
	</div>
</div>

<div class="form-group">
	<div class="col-sm-offset-2 col-sm-5">
		<%= f.submit("Create Account", {:class => 'btn btn-default'}) %>
	</div>
</div>


<% end %>

