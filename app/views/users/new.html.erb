<div class="section" id="toppad">



<div class="col span_2_of_10"></div>

<div class="col span_7_of_10" id="center-col">

	<div class="section centerhor">
		<h1>Join our community!</h1>
	</div>
</br></br>

<div class="section">

	<div class="col span_1_of_10"></div>

	<div class="col span_4_of_10 centerhor">
<%= form_for(@user) do |f| %>
	<h3>First Name</h3>
	</br>
<%= f.text_field(:firstname, {:placeholder => "First Name", :required => true, :class => "forms"}) %>
</br>
</br>
<h3>Last Name</h3>
</br>
<%= f.text_field(:lastname, {:placeholder => "Last Name", :required => true, :class => "forms"}) %>
</br>
</br>
<h3>Email</h3>
</br>
<%= f.text_field(:email, {:placeholder => "E-mail", :required => true, :class => "forms"}) %>
</br>
</br>

	</div>
	

<div class="col span_4_of_10 centerhor">



<h3>Create a Password</h3>
</br>
<div>
<%= f.password_field(:password, {:placeholder => "Password", :required => true, :class => "forms"}) %>
</div>
</br>
<h3>Confirm Password</h3>
</br>
<div>
<%= f.password_field(:password_confirmation, {:placeholder => "Confirm Password", :required => true, :class => "forms"}) %>
</div>
</br>
</br>



</br>


</br></br>

</div>

<div class="col span_1_of_10"></div>



</div>

</br>
</br>
<div class="section centerhor">

<%= f.submit("Create Account", :class => "button") %>

<% end %>
<br>
</div>


</div>

<div class="col span_1_of_10"></div>



</div>