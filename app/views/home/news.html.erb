<% news_articles = news_result[:News] %>
<% news_articles.each do |news_article| %>
<div class="newsItem">
	<%= link_to(news_article[:Title], news_article[:Url]) %>
	<div class="newsdesc">
	<%= news_article[:Source] %>
	<%= news_article[:Description][0..100] << "..." %>
</div>
</div>
<br />
<% end %>
<% end %>

</div>

</br>
<div class="center-obj">

	<div class="fb-page" data-href="https://www.facebook.com/debatablelive" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/debatablelive"><a href="https://www.facebook.com/debatablelive">Debatable</a></blockquote></div></div>

</div>
