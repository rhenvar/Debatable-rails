<h3>Talk it up!</h3>
		</div>
	</br>

<div class="home-butts-container">
	<%= button_to "New Debate", new_user_debate_path(@user), {:class => 'home-butts button', :method => 'get'} %>
</div>
</br>
<div class="home-butts-container">

	<%= button_to "New Firetalk", new_user_firetalk_path(@user), {:class => 'home-butts button', :method => 'get'} %>
</div>

</div>


</div>

<div class="col span_7_of_10" id="center-col">

<div class="centerhor">
